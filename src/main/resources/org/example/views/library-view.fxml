<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.LibraryController">
    <Label text="Library Database" style="-fx-font-size: 24px;"/>
    <HBox spacing="10">
        <TextField fx:id="bookTitleField" promptText="Enter book title"/>
        <TextField fx:id="bookAuthorField" promptText="Enter book author"/>
        <TextField fx:id="bookPublishDateField" promptText="Enter publish date"/>
        <Button text="Add Book" onAction="#handleAddBook"/>
    </HBox>
    <HBox>
        <TextField fx:id="bookTitleFilterField" promptText="Enter book title"/>
        <Button text="Search" onAction="#findBook"/>
    </HBox>
    <ListView fx:id="bookListView" prefHeight="200"/>
    <HBox spacing="10">
        <Button text="Loan Book" onAction="#handleLoanBook"/>
        <Button text="Remove Book" onAction="#handleRemoveBook"/>
    </HBox>
</VBox>