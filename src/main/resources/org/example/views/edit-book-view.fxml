<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.book.BookEditDialogController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="150" bottom="10" left="10"/>
    </padding>

    <Label text="Title" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="bookTitleField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Author" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="bookAuthorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Publish date" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="bookDateField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Genre" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="bookGenreBox" promptText="Genre" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>
