<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.text.Text?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controllers.ReadersController">
    <Label text="Readers" style="-fx-font-size: 24px"/>
    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="addressField" promptText="Address"/>
        <TextField fx:id="birthDateField" promptText="Birth Date"/>
        <Button onAction="#addReader" fx:id="createReaderBtn" text="Create"/>
    </HBox>
    <HBox spacing="10">
        <TextField fx:id="findByNameField" promptText="Name to find"/>
        <Button fx:id="findByNameBtn" text="Search" onAction="#findReader"/>
        <TextField fx:id="findByLoanedBookField" promptText="Book to find"/>
        <Button fx:id="findByLoanedBookBtn" text="Search" onAction="#findReaderByLoanedBook"/>
    </HBox>
    <TableView fx:id="readerTable">
        <columns>
            <TableColumn fx:id="nameTableCol" text="Name"/>
            <TableColumn fx:id="addressTableCol" text="Address"/>
            <TableColumn fx:id="bDateTableCol" text="Birth Date"/>
            <TableColumn fx:id="loanedBooksTableCol" text="Loaned Books"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button fx:id="loanBookBtn" text="Loan book" onAction="#handleLoanBook"/>
        <Button fx:id="updateReaderBtn" text="Edit reader" onAction="#handleUpdateReader"/>
        <Button fx:id="removeReaderBtn" onAction="#removeReader" text="Remove"/>
    </HBox>
</VBox>
