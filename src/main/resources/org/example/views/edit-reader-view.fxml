<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.reader.ReaderEditDialogController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="150" bottom="10" left="10"/>
    </padding>

    <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="readerNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="readerEmailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="readerAddressField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

</GridPane>
